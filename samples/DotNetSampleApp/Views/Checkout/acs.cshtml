@model JudoPayDotNet.Models.PaymentRequiresThreeDSecureModel
@{
    Layout = null;
}
<html>
<head>
    <title>3D secure</title>
</head>
<body>
    <form action="@Model.AcsUrl" id="acsForm" method="post" role="form">
        <div class="form-group">
            <input id="Md" name="Md" type="hidden" value="@Model.Md">
            <input id="PaReq" name="PaReq" type="hidden" value="@Model.PaReq">
            <input id="TermUrl" name="TermUrl" type="hidden" value="@ViewData["TermUrl"]">
            <input id="ReceiptId" name="ReceiptId" type="hidden" value="@Model.ReceiptId">
            <div class="show-js">
                Redirecting you to your card issuer.
            </div>
            <div class="hide-js">
                <button type="submit" name="Go" class="btn btn-orange col-xs-12">Go to your issuer</button>
            </div>
        </div>
        <script type="text/javascript">
            document.getElementById("acsForm").submit();
        </script>
    </form>
</body>
</html>

